<body>
    <div class="loginBox"> <img class="user" src="https://i.ibb.co/yVGxFPR/2.png" height="100px" width="100px">
        <h3 class="text-primary">Sign up here</h3>
        <form action="/signup" method="POST">
            <div class="inputBox"> <input id="uname" type="text" name="name" placeholder="Username"> <input id="pass" type="password" name="password" placeholder="Password"> </div> <input type="submit"  value="Login">
        </form> 
        <div class="text-center">
            <p>Already have an account?</p>
            <a href="/" style="color: blue;">Sign-In</a>
        </div>
        
    </div>
